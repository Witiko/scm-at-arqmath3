%% Beamer theme
\usetheme[workplace=fi]{MU}

%% Blockquotes
\RequirePackage{etoolbox}
\markdownSetup{
  renderers = {
    blockQuoteBegin = {%
      \smallskip
      \par
      \begin{quotation}%
        \preto\markdownRendererTextCite{\kern-2pt\,--\,}%
        \noindent
    },
    blockQuoteEnd = {%
      \end{quotation}%
      \vspace*{-0.15em}%
    },
    blockHtmlCommentBegin = {},
    blockHtmlCommentEnd = {},
  },
}

% Multi-column lists and texts
\RequirePackage{multicol}
\multicolsep=0.1em

\newcount\markdownOlColumns
\newcount\markdownUlColumns
\newcount\markdownDlColumns
\markdownOlColumns=1
\markdownUlColumns=1
\markdownDlColumns=1

\markdownSetup{
  renderers = {
    olBegin = {%
      \ifnum\markdownOlColumns>1\relax
        \begingroup
          \multicolsep=0pt
          \raggedcolumns
          \begin{multicols}{\the\markdownOlColumns}%
            \begin{enumerate}%
      \else
        \begin{enumerate}%
      \fi
    },
    olEnd = {%
      \ifnum\markdownOlColumns>1\relax
            \end{enumerate}%
          \end{multicols}%
        \endgroup
      \else
        \end{enumerate}%
      \fi
    },
    ulBegin = {%
      \ifnum\markdownUlColumns>1\relax
        \begingroup
          \multicolsep=0pt
          \raggedcolumns
          \begin{multicols}{\the\markdownUlColumns}%
            \begin{itemize}%
      \else
        \begin{itemize}%
      \fi
    },
    ulEnd = {%
      \ifnum\markdownUlColumns>1\relax
            \end{itemize}%
          \end{multicols}%
        \endgroup
      \else
        \end{itemize}%
      \fi
    },
    dlBegin = {%
      \ifnum\markdownDlColumns>1\relax
        \begingroup
          \multicolsep=0pt
          \raggedcolumns
          \begin{multicols}{\the\markdownOlColumns}%
            \begin{description}%
      \else
        \begin{description}%
      \fi
    },
    dlEnd = {%
      \ifnum\markdownDlColumns>1\relax
            \end{description}%
          \end{multicols}%
        \endgroup
      \else
        \end{description}%
      \fi
    },
    horizontalRule = {
      \begingroup
        \bigskip
        \multicolsep=0pt
        \raggedcolumns
        \begin{multicols}{2}
        \renewcommand\markdownRendererHorizontalRule{%
          \columnbreak
          \renewcommand\markdownRendererHorizontalRule{%
            \end{multicols}
            \vspace*{-\medskipamount}
            \endgroup
          }
        }
    },
  },
}

% Frame breaks
\markdownSetupSnippet{horizontalRule/frameBreak}{
  renderers = {
    horizontalRule = {%
      \framebreak
    },
  },
}

